<resources>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/warm_grey</item>
        <item name="colorPrimaryDark">@color/dark_grey_two</item>
        <item name="colorAccent">@color/warm_grey_three</item>
    </style>

    <style name="BlueThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey_two</item>
        <item name="colorPrimaryDark">@color/warm_grey</item>
        <item name="colorAccent">@color/warm_grey_three</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>

</resources>
